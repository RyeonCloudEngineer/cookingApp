<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.frontapp">
    <!-- 인터넷 연결 권한 허용 -->
    <uses-permission android:name="android.permission.INTERNET" />
<!--    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>-->
    <!-- 카메라 권한 허용 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!--
카메라 사용 명시
    required="true"는 카메라 필수
    -->
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        android:launchMode="singleTask">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PhotoCheckActivity" />
        <activity android:name=".PersonInfoActivity" />
        <activity android:name=".GroceryManagementActivity" />
        <activity android:name=".GroceryListInPhotoActivity" />
        <activity android:name=".MainGrocerySelectionActivity" />
        <activity android:name=".CookListActivity" />
        <activity android:name=".CookInfoNGredient" />
        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <service android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService" android:enabled="true" />
    </application>

</manifest>